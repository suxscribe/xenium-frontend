mixin post-teaser(args)
  li.posts__item(class='posts__item--' + args.class)
    //- data-aos='fade-up', data-aos-delay=args.delay
    a(href="#").posts__item-link
    .posts__item-bg 
      img(src="/assets/" + args.image, alt="")
    .posts__item-type !{args.type}
    .posts__item-sections= args.sections
    .posts__item-bottom
      .posts__item-address= args.address
      .posts__item-title
        a(href="") !{args.title}
      .posts__item-button
        +button-arrow({class:'right'})
    .posts__item-date= args.date

mixin event-teaser(args)
  li.posts__item(class='posts__item--' + args.class)
    a(href="#").posts__item-link
