mixin menu-item(args) 
  li.menu__item 
    a.menu__item-link(href=args.href)= args.name 


mixin main-slide-1(args)
  li.main-slider-1__item.swiper-slide 
    .main-slider-1__item-content 
      .main-slider-1__item-author= args.author
      .main-slider-1__item-name
        a(href="artwork.html") !{args.title}
      .main-slider-1__item-description= args.desc
