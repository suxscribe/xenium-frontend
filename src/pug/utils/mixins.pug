mixin content-slide(args)
  li.content-slider__item.swiper-slide 
    .content-slider__item-image
      img(src="/assets/" + args.image, alt="")

mixin post-teaser(args)

  li.post(class='post--' + args.class)
    //- data-aos='fade-up', data-aos-delay=args.delay
    .post__wrap
      a(href="#").post__link
      .post__bg 
        img(src="/assets/" + args.image, alt="", width=args.width, height=args.height)
      .post__content
        .post__type !{args.type}
        .post__sections= args.sections
        .post__bottom
          .post__address= args.address
          .post__title !{args.title}
          .post__button
            +button-arrow({class:'right'})
        .post__date= args.date

mixin event-teaser(args)
  li.post(class='post--' + args.class)
    a(href="#").post__link
    .post__bg 
      img(src="/assets/" + args.image, alt="")
    .post__content
      .post__type !{args.type}
      .post__sections= args.sections
      .post__bottom
        .post__address= args.address
        .post__title !{args.title}
      .post__date= args.date
      .post__button
